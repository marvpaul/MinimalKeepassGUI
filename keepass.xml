    <property name="artifact.temp.output.keepass:jar" value="${artifacts.temp.dir}/Keepass_jar"/>
    <mkdir dir="${artifact.temp.output.keepass:jar}"/>
    <jar destfile="${temp.jar.path.Keepass.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${keepass.output.dir}"/>
      <zipfileset src="${path.variable.maven_repository}/org/codehaus/woodstox/stax2-api/4.0.0/stax2-api-4.0.0.jar"/>
      <zipfileset src="${path.variable.maven_repository}/org/linguafranca/pwdb/database/2.1.1/database-2.1.1.jar"/>
