    </jar>
    <copy file="${temp.jar.path.Keepass.jar}" tofile="${artifact.temp.output.keepass:jar}/Keepass.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.keepass:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.keepass:jar}"/>
    <copy todir="${artifact.output.keepass:jar}">
